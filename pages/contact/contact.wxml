<!--pages/indx/indx.wxml-->
<view style='height:2000px;max-width:100%;'>
    <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000" circular='true'>    
      <block wx:for="{{m}}" wx:for-index="id">    
        <swiper-item>    
          <image src="{{item.url}}" class="slide-image image" style='width: 100%; height: 100%' mode="aspectFill"/>    
        </swiper-item>    
      </block>    
    </swiper>  
</view>
     
